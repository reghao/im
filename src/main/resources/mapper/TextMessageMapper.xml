<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.reghao.im.db.mapper.TextMessageMapper">
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into text_message
        (`id`,`deleted`,`create_time`,`update_time`,`chat_type`,`sender_id`,`receiver_id`,`create_at`,`text`)
        values 
        (#{id},#{deleted},#{createTime},#{updateTime},#{chatType},#{senderId},#{receiverId},#{createAt},#{text})
    </insert>
    
    <select id="findBySenderAndReceiverId" resultType="cn.reghao.im.model.po.TextMessage">
        select * from text_message where sender_id=#{senderId} and receiver_id=#{receiverId}
    </select>
</mapper>
