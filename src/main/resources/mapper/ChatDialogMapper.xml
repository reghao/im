<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.reghao.im.db.mapper.ChatDialogMapper">
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into chat_dialog
        (`id`,`deleted`,`create_time`,`update_time`,`chat_id`,`chat_type`,`receiver_id`,`is_disturb`,`is_online`,`is_robot`,`is_top`,`user_id`,`unread_num`,`last_send_user_id`,`update_at`,`msg_text`)
        values 
        (#{id},#{deleted},#{createTime},#{updateTime},#{chatId},#{chatType},#{receiverId},#{isDisturb},#{isOnline},#{isRobot},#{isTop},#{userId},#{unreadNum},#{lastSendUserId},#{updateAt},#{msgText})
    </insert>

    <select id="findByReceiverAndUserId" resultType="cn.reghao.im.model.po.ChatDialog">
        select * from chat_dialog where receiver_id=#{receiverId} and user_id=#{userId}
    </select>
    <select id="findByUserId" resultType="cn.reghao.im.model.po.ChatDialog">
        select * from chat_dialog where user_id=#{userId}
    </select>
</mapper>
